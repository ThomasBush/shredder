<h1>Listing lifts</h1>

<table>
  <thead>
    <tr>
      <th>Reps</th>
      <th>Weight</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lifts.each do |lift| %>
      <tr>
        <td><%= lift.reps %></td>
        <td><%= lift.weight %></td>
        <td><%= link_to 'Show', lift %></td>
        <td><%= link_to 'Edit', edit_lift_path(lift) %></td>
        <td><%= link_to 'Destroy', lift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

