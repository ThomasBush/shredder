<fieldset class="row-fluid">

  <div class="control-group span4 pull-left">
    <%= f.label :name, "Exercise", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group span4 pull-left">
    <%= f.hidden_field :_destroy %>
  	<%= link_to "remove", '#', class: "remove_fields btn btn-mini btn-danger" %>
  </div>

  <%= f.fields_for :lifts do |builder| %>
    <%= render 'lift_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Lift", f, :lifts %>
</fieldset>